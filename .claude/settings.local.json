{
  "permissions": {
    "allow": [
      "Bash(git log:*)",
      "Bash(export RUST_LOG=script::dom::html::htmlscriptelement=trace)",
      "Bash(./mach run test-compare-types.html)",
      "Bash(./sync-upstream.sh)",
      "Bash(git diff HEAD~7)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "cd /opt/other/servo-light && ./sync-upstream.sh",
            "timeout": 120
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "ExitPlanMode|Edit|MultiEdit|Write|NotebookEdit|WebFetch|WebSearch|Bash|BashOutput|Read",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/permissions_hook.js",
            "timeout": 300
          }
        ]
      },
      {
        "matcher": "mcp__.*__.*",
        "hooks": [
          {
            "type": "command",
            "command": "node $CLAUDE_PROJECT_DIR/.claude/hooks/permissions_hook.js",
            "timeout": 300
          }
        ]
      }
    ]
  }
}   "timeout": 300
          }
        ]
      }
    ]
  }
}